{% extends 'base.html.twig' %}

{% block title %}JobTitle index{% endblock %}

{% block body %}
    <h1>JobTitle index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for job_title in job_titles %}
            <tr>
                <td>{{ job_title.id }}</td>
                <td>{{ job_title.title }}</td>
                <td>
                    <a href="{{ path('app_job_title_show', {'id': job_title.id}) }}">show</a>
                    <a href="{{ path('app_job_title_edit', {'id': job_title.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_job_title_new') }}">Create new</a>
{% endblock %}
